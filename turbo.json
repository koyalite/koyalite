{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "outputs": []
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        },
        "typecheck": {
            "outputs": []
        },
        "db:migrate": {
            "cache": false
        },
        "db:status": {
            "cache": false
        },
        "clean": {
            "cache": false
        },
        "generate": {
            "dependsOn": ["^generate"]
        }
    }
}
