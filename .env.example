# Core
NODE_ENV=development
PORT=3000

# Database
SQLITE_PATH=./data/koyalite.db
SQLCIPHER_KEY=your-encryption-key # Optional, for encrypted-at-rest

# Auth
JWT_SECRET=your-jwt-secret
SESSION_SECRET=your-session-secret

# Email (Resend)
RESEND_API_KEY=your-resend-api-key

# Storage (SeaweedFS)
SEAWEEDFS_MASTER=localhost:9333

# Search (Weaviate)
WEAVIATE_ENDPOINT=http://localhost:8081
WEAVIATE_API_KEY=your-api-key # Optional

# Analytics
POSTHOG_API_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=koyalite

# Edge Functions
DENO_DEPLOY_TOKEN=your-deno-deploy-token # Optional, for edge deployment

# Secrets Management
INFISICAL_TOKEN=your-infisical-token # Optional, for secrets management 