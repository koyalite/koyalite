{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@koyalite/core-types": ["./packages/core-types/src"],
      "@koyalite/database": ["./packages/database/src"],
      "@koyalite/auth-client": ["./packages/auth-client/src"],
      "@koyalite/sdk": ["./packages/sdk/src"],
      "@koyalite/cli": ["./packages/cli/src"],
      "@koyalite/rls": ["./packages/rls/src"],
      "@koyalite/config": ["./packages/config/src"],
      "@koyalite/logger": ["./packages/logger/src"],
      "@koyalite/storage-client": ["./packages/storage-client/src"],
      "@koyalite/search-client": ["./packages/search-client/src"],
      "@koyalite/email-templates": ["./packages/email-templates/src"],
      "@koyalite/ui-components": ["./packages/ui-components/src"]
    }
  },
  "exclude": ["node_modules"]
} 